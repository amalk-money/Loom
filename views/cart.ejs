<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <%- include('./partials/header') %>
        <div class="w-full h-screen flex flex-col px-20 py-20 gap-10">
            <%if(user.cart.length==0){%>
                <div class="w-full h-screen flex flex-col items-center justify-center">
                    <h3 class="text-xl">Your <span class="text-blue-500 font-bold">Loom</span> cart<i class="ri-shopping-cart-line"></i> is empty</h3>
                    <a class="text-blue-500" href="/shop">Pick up where you left off</a>
                </div>
            <%} else {%>
                <div class="w-full flex flex-wrap flex-col gap-5">
                <%user.cart.forEach(function(item){ %>
                    <div class="flex flex-shrink-0 w-full rounded-md overflow-hidden">
                        <div class="flex w-[15%] items-center justify-center bg-[<%=item.bgcolor%>]">
                            <img class="h-[8rem] " src="data:image/jpeg;base64, <%= item.image.toString('base64') %>"
                                alt="<%=item.name%>">
                        </div>
                        <div class="w-[85%] flex flex-col items-start px-5 py-4 bg-[<%=item.panelcolor%>]">
                            <div>
                                <h3 class="text-xl text-white">
                                    <%=item.name%>
                                </h3>
                            </div>

                            <div class="flex items-start gap-2 mt-2">
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </div>

                            <div class="flex items-start text-white gap-2">
                                <h4 class="text-lg">Price:</h4>
                                <h2 class="text-lg">$<%=item.price%>
                                </h2>
                            </div>

                        </div>
                    </div>
                    <%})%>
            </div>
            <div class="flex-grow w-full">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>$<%=subTotal%>
                        </h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>$0</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>$5</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5 mb-10">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">$<%=(Number(subTotal)+5).toFixed(2)%>
                    </h3>
                </div>

                <div class="mb-10">
                    <a class="bg-blue-500 rounded-2xl px-4 py-2 w-fit text-xl text-white" href="/buy/<%=Number(subTotal)+5%>">Proceed to Buy (<%=user.cart.length%> items)</a>
                </div>
            </div>
                <%}%>
        </div>


</body>

</html>